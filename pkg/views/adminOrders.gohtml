<!doctype html>
<html lang="en" class="h-screen">
<head>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@100..900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/static/css/styles.css">

    <script src="/static/js/adminOrders.js" defer></script>
    <title>
        Admin Orders
    </title>
</head>
<body class="bg-slate-900 h-screen font-noto">
<div class="flex flex-col items-center justify-center h-screen text-white">
    <div class="flex flex-row bg-slate-800 w-full h-[10%] text-white items-center justify-between gap-16 px-32">
        You are Logged in as: Admin
        <div class="flex flex-row bg-slate-800 w-[50%] h-full text-teal-500 items-center justify-end gap-16">
            <a href="/items">Items</a>
            <a href="/sections">Sections</a>
            <a href="/orders">Orders</a>
            <a href="/users">Users</a>
            <a id="logout" href="/login">Log Out</a>
        </div>
    </div>
    <div class="flex flex-row items-center w-full h-[10vh] px-8">
        <div class="flex flex-row w-full">
            <label for="page">Page:</label>
            <input id="page" type="number" value="{{.Page}}" min="1" class="w-[5%] bg-slate-800 ps-2">
        </div>
    </div>
    <div class="flex flex-col items-end w-full h-[80vh] overflow-y-scroll">
        {{range $i, $order := .Orders}}
            <div class="flex flex-row justify-between w-full h-[10%] min-h-[10%] border-gray-600 border items-center px-8">
                <div class="w-[10%]">Order No: {{$order.OrderId}}</div>
                <div class="text-right w-[5%]">â‚¹{{$order.Price}}</div>
                <div class="flex flex-row justify-start w-[20%] gap-x-4">
                    <progress id="progress {{ $i }}" value="{{$order.Progress}}"
                              class="rounded-full" max="100"></progress>
                    <label for="progress {{ $i }}">{{$order.Progress}}%
                    </label>
                </div>
                <div class="flex flex-row gap-4 w-[20%]">
                    {{ if $order.Paid }}
                        <input id="checkbox {{ $i }}" data-OrderId="{{ $order.OrderId }}" type="checkbox"
                               checked>
                        <label for="checkbox {{ $i }}">Undo Payment</label>
                    {{ else }}
                        <input id="checkbox {{ $i }}" data-OrderId="{{ $order.OrderId }}" type="checkbox">
                        <label for="checkbox {{ $i }}">Confirm Payment</label>
                    {{end}}
                </div>
                <div class="w-[5%] text-center">
                    <button id="dropdown {{ $i }}" data-OrderId="{{ $order.OrderId }}">v</button>
                </div>
            </div>
            {{range $j, $dish := $order.Dishes}}
                <div class="flex flex-row justify-between w-[90%] h-[10%] min-h-[10%] bg-slate-950 border-gray-600 border items-center px-8 hidden-{{ $i }} hidden">
                    <div class="w-[20%]">
                        {{ $dish.DishCount }} x {{ $dish.ItemName }}
                    </div>
                    <div class="w-[10%]">
                                        <textarea class="bg-slate-950 ps-2 resize-none h-full"
                                                  disabled>{{ $dish.SplInstructions }}</textarea>
                    </div>
                    <div class="flex flex-row gap-4 w-[20%]">
                        {{if $dish.Prepared }}
                            <input id="checkbox {{ $i }} {{ $j }}"
                                   data-DishId="{{$dish.DishId}}"
                                   type="checkbox"
                                   checked="checked">
                            <label id="checkboxLabel {{ $i }} {{ $j }}"
                                   for="checkbox {{ $i }} {{ $j }}">Mark as Unprepared</label>
                        {{else}}
                            <input id="checkbox {{ $i }} {{ $j }}"
                                   data-DishId="{{$dish.DishId}}"
                                   type="checkbox">
                            <label id="checkboxLabel {{ $i }} {{ $j }}"
                                   for="checkbox {{ $i }} {{ $j }}">Mark as Prepared</label>
                        {{end}}
                    </div>
                </div>
            {{end}}
        {{end}}
    </div>
</div>
</body>
</html>
