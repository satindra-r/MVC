<!doctype html>
<html lang="en" class="h-screen">
<head>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@100..900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/static/css/styles.css">
    <script src="/static/js/items.js" defer></script>
    <title>
        Items
    </title>
</head>
<body class="bg-[--colour-900] h-screen fo">
<input type="hidden" id="filters" data-filters="{{.Filters}}">
<div class="flex flex-col items-center justify-center h-screen text-[--colour-font]">

    <div class="flex flex-row bg-[--colour-800] w-full h-[10%] text-[--colour-font] items-center justify-between gap-16 px-32">
        You are Logged in as: User
        <div class="flex flex-row bg-[--colour-800] w-[50%] h-full text-[--colour-hyper] items-center justify-end gap-16">
            <a href="/items" class="text-center border border-[--colour-border] rounded-full w-[15%] h-[25%] bg-[--colour-900]">Items</a>
            <a href="/orders" class="text-center border border-[--colour-border] rounded-full w-[15%] h-[25%] bg-[--colour-900]">Orders</a>
            <a id="logout" href="/login" class="text-center border border-[--colour-border] rounded-full w-[15%] h-[25%] bg-[--colour-900]">Log Out</a>
        </div>
    </div>

    <div class="flex flex-row items-center w-full h-[10%] px-8">
        <div class="flex flex-row items-center w-[50%] gap-2">
            <label for="page">Page:</label>
            <input id="page" value="{{.Page}}" min="1" class="w-[5%] h-[50%] bg-[--colour-bg] ps-2">
            <div class="flex flex-col w-[5%] h-[75%] gap-1">
                <button id="button page up" class="border border-[--colour-border] rounded-full w-full h-1/2">
                    +
                </button>
                <button id="button page down" class="border border-[--colour-border] rounded-full w-full h-1/2">
                    -
                </button>
            </div>
        </div>
    </div>

    <div class="flex flex-row w-full h-[70%]">
        <div class="flex flex-col border border-[--colour-border] w-[15%] h-full px-8 py-4">
            <label for="search" class="flex flex-row items-center w-full h-[5vh] font-bold">
                Search
            </label>
            <input id="search" value="{{.Search}}" placeholder="Search" class="w-full bg-[--colour-bg] ps-2" autocomplete="off">
            <hr/>
            <div class="flex flex-row items-center w-full h-[5vh] font-bold">
                Filters
            </div>
            {{ range $i, $section := .Sections }}
                <div class="flex flex-row items-center justify-start gap-4 h-[5vh]">
                    <input id="checkbox {{ $i }}" type="checkbox" data-SectionId="{{ $section.SectionId }}">
                    <!--inline css used purely because other options require too much logic and make it slower-->
                    <div class="w-[2vh] h-[2vh] rounded-full" style="background-color: hsl({{$section.Colour}},50%,75%)"></div>
                    <label for="checkbox {{ $i }}">{{ $section.SectionName }}</label>
                </div>
            {{end}}
        </div>
        <div class="flex flex-col w-[85%] h-full">
            {{ range $i, $item := .Items }}
                <div class="flex flex-row justify-between w-full h-[10%] border-gray-600 border border-[--colour-border] items-center px-8">
                    <div class="w-[10%]">
                        {{$item.ItemName}}
                    </div>
                    <div class="flex flex-row items-center justify-start gap-2 w-[10%] h-full">
                        <!--inline css used purely because other options require too much logic and make it slower-->
                        <div class="w-[2vh] h-[2vh] rounded-full" style="background-color: hsl({{$item.Colour}},50%,75%)"></div>
                        {{ $item.SectionName }}
                    </div>
                    <div class="text-right w-[5%]">
                        â‚¹{{$item.Price}}
                    </div>
                    <div class="flex flex-row items-center justify-around w-[15%]">
                    <textarea id="instruction {{ $i }}" data-ItemId="{{$item.ItemId}}"
                              placeholder="Spl Instructions" class="bg-[--colour-bg] ps-2 resize-none h-full"></textarea>
                    </div>

                    <div class="flex flex-row items-center justify-between gap-2 w-[10%]">
                        <label for="counter {{$i}}">Count:</label>
                        <input id="counter {{$i}}" data-ItemId="{{$item.ItemId}}" value="0"
                               class="bg-[--colour-bg] ps-2 w-[50%]">
                        <div class="flex flex-col w-[50%] h-[75%] gap-1">
                            <button id="button up {{ $i }}" data-ItemId="{{$item.ItemId}}"
                                    class="border border-[--colour-border] rounded-full w-full h-1/2">
                                +
                            </button>
                            <button id="button down {{ $i }}" data-DishId="{{$item.ItemId}}"
                                    class="border border-[--colour-border] rounded-full w-full h-1/2">
                                -
                            </button>
                        </div>
                    </div>
                </div>
            {{end}}
        </div>
    </div>

    <div class="flex justify-end items-center bg-[--colour-800] w-full h-[10%] px-8">
        <button id="order" class="w-[10%] h-1/2 bg-[--colour-900] border-gray-500 border-4 rounded-full">Order
        </button>
    </div>
</div>
</body>
</html>
